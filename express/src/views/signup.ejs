<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup Page</title>
    <style>
      body {
        overflow: hidden;
      }
      .signup-container {
        background-color: #fff;
        padding: 40px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        max-width: 400px;
        width: 100%;
        text-align: center;
        margin: auto;
        margin-top: 15vh;
      }
      .signup-container h1 {
        font-size: 2em;
        margin-bottom: 20px;
      }
      .signup-container form {
        display: flex;
        flex-direction: column;
      }
      .signup-container input {
        margin-bottom: 15px;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }
      .signup-container input:focus {
        border-color: #333;
      }
      .signup-container button {
        padding: 10px;
        font-size: 1em;
        color: #fff;
        background-color: #333;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background 0.3s;
      }
      .signup-container button:hover {
        background-color: #575757;
      }
    </style>
  </head>
  <body>
    <%-include("./navbar.ejs") %>
    <div class="signup-container">
      <h1>Signup</h1>
      <form action="/signup" method="POST">
        <input
          type="text"
          name="username"
          placeholder="Username"
          required
          autocomplete="off"
        />
        <input
          type="email"
          name="email"
          placeholder="Email"
          required
          autocomplete="off"
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
          autocomplete="off"
        />
        <input
          type="password"
          name="cpassword"
          placeholder="Confirm Password"
          required
          autocomplete="off"
        />
        <button type="submit">Signup</button>
      </form>
    </div>
    <%-include("./footer.ejs") %>
  </body>
</html>
